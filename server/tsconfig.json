{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./dist/",
    "sourceMap": false,
    "esModuleInterop": true,
    "lib": ["es2015", "dom", "dom.iterable", "es2019", "ES2020", "ESNext"],
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
